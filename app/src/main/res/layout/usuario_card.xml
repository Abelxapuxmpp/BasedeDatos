<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ID Usuario"
            android:id="@+id/id_usuario"
            android:textColor="#424242"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="usuario"
            android:id="@+id/c_usuario"
            android:textColor="#424242"
            android:layout_toRightOf="@+id/id_usuario"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="password"
            android:id="@+id/c_password"
            android:textColor="#424242"
            android:layout_toRightOf="@+id/c_usuario"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="nombre"
            android:id="@+id/c_nombre"
            android:textColor="#424242"
            android:layout_toTopOf="@+id/c_usuario"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="apellidop"
            android:id="@+id/c_apellidop"
            android:textColor="#424242"
            android:layout_toRightOf="@+id/c_nombre"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="apellidom"
            android:id="@+id/c_apellidom"
            android:textColor="#424242"
            android:layout_toRightOf="@+id/c_apellidop"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="email"
            android:id="@+id/c_email"
            android:textColor="#424242"
            android:layout_toTopOf="@+id/c_nombre"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>



